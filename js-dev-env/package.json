{
  "name": "js-dev-env",
  "version": "1.0.0",
  "description": "Javascript Development Environment",
  "main": "index.js",
  "scripts": {
    "compile:sass": "node-sass custom.scss build/custom.css",
    "compile:css": "sass custom.scss:custom.css --style expanded",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" custom.css -o build/custom.prefixed.css",
    "compress:css": "node-sass build/custom.prefixed.css custom.min.css --output-style compressed",
    "build:css": "npm-run-all compile:sass compile:css prefix:css compress:css",
    "build:js": "uglifyjs custom.js -c -m -o custom.min.js",
    "build:js2folder": "uglifyjs-folder inputfolder -eo outputfolder",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "prelaunch-local-express": "node build_scripts/startMessage-launch-local-express.js",
    "launch-local-express": "babel-node build_scripts/srcServer.js",
    "prelaunch-live-public": "node build_scripts/startMessage-launch-live-public.js",
    "launch-live-public": "lt --port 3000 --subdomain mjklive",
    
    "eslint": "esw webpack.config.* src build_scripts --color",
    "eslint:watch": "npm run eslint -- --watch",

    "scriptTests": "mocha --reporter progress build_scripts/testSetup.js \"src/**/*.test.js\"",
    "scriptTests:watch": "npm run scriptTests -- --watch",

    "process-chain": "npm-run-all --parallel process-name-1 process-name-2"
    
  },
  "author": "Muhammad Javed Khalil",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "whatwg-fetch": "^1.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-minify": "^0.5.0",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-minify": "^0.5.0",
    "babel-register": "^6.26.0",
    "babili-webpack-plugin": "^0.1.2",
    "browser-sync": "^2.26.3",
    "chai": "^4.2.0",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "csv-loader": "^3.0.2",
    "eslint": "^5.8.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-watch": "^4.0.2",
    "express": "^4.16.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "jsdom": "^13.0.0",
    "json-schema-faker": "^0.5.0-rc16",
    "json-server": "^0.14.0",
    "live-server": "^1.2.0",
    "localtunnel": "^1.9.1",
    "mini-css-extract-plugin": "^0.4.4",
    "mocha": "^5.2.0",
    "nock": "^10.0.2",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "numeral": "^2.0.6",
    "open": "0.0.5",
    "postcss-cli": "^6.0.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "sort-package-json": "^1.16.0",
    "style-loader": "^0.23.1",
    "uglify-js": "^3.4.9",
    "uglifyjs-folder": "^1.5.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.25.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-md5-hash": "0.0.6",
    "xml-loader": "^1.2.1"
  }
}
